#!/usr/bin/env bash
set -e
set -u

# %k     hour, space padded ( 0..23); same as %_H
# %M     minute (00..59)
# %A     full weekday name (e.g., Sunday)
# %B     full month name (e.g., January)
# %e     day of month, space padded ( 1..31)
# %Y     year including century (e.g., 2024)
date "+%k:%M %A, %B %e, %Y"
# %V     ISO week number, with Monday as first day of week (01..53)
date "+Week %V"
# As ISO 8601
echo
echo "ISO 8601 local: $(date --iso-8601=seconds)"
echo "ISO 8601 UTC:   $(date --iso-8601=seconds --utc)"

