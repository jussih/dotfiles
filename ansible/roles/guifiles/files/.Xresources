Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight


URxvt.font: xft:Inconsolata-12
URxvt.boldFont: xft:Inconsolata-12:bold
URxvt.italicFont: xft:Inconsolata-12:italic
URxvt.boldItalicFont: xft:Inconsolata-12:italic:bold
URxvt.letterSpace: -1                ! pixels between letters
URxvt.lineSpace: 0                   ! pixels between lines

URxvt.scrollstyle: plain
URxvt.scrollBar_right: true
URxvt.scrollColor: #3186AD
URxvt.internalBorder: 0
URxvt.externalBorder: 0
URxvt.thickness: 10
URxvt.dynamicColors: off
URxvt.intensityStyles: false

URxvt.scrollTtyKeypress: true        ! scroll to bottom on keypress
URxvt.scrollTtyOutput: false         ! do not scroll to bottom on output
URxvt.buffered: true                 ! double buffer for xtf
URxvt.saveLines: 5000
URxvt.perl-ext: default              ! matcher disabled due to too heavy regex parsing
URxvt.matcher.button: 1
URxvt.url-launcher: google-chrome
URxvt.iso14755: False
URxvt.termName: rxvt-unicode

URxvt.print-pipe: "cat > /dev/null"  ! no more stacks of console output in the office printer tray
URxvt.keysym.Home: \033[7~
URxvt.keysym.End: \033[8~
URxvt.keysym.KP_Home: \033[7~
URxvt.keysym.KP_End:  \033[8~


