[color]
    ui = true

[alias]
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --abbrev-commit --date=local --all
    l = log --branches --remotes --tags --graph --oneline --decorate --all
    ll = log --branches --remotes --tags --graph --decorate --all
    lstat = log --graph --date=relative --stat
    st = status
    b = branch -vva
    pushup = !git push --set-upstream origin $(git branch --show-current)
    # rebasetobase starts an interactive rebase to the target branch commit where current branch diverted from (the base)
    # handy for squashing commits
    # example: git rebasetobase main
    rebasetobase = rebase -i --keep-base

    ddiff = -c core.pager=delta diff
    dlog = -c core.pager=delta log -p
    dshow = -c core.pager=delta show

[push]
    default = simple

[diff]
    tool = meld

[merge]
    tool = meld

[delta]
    line-numbers = true
    syntax-theme = Nord

[include]
    path = ~/.config/git/config.local
